        </ul>      
    </div>
<!-- </nav> -->

<div class="container-fluid">
    <div class="row">
        <% for (i=0; i<testmovies.length; i++){%>
            <div class="cardholder col-lg-4 col-md-12 col-sm-12">
                <div class="movie">
                    <div class="icon">
                    <a href="<%= testmovies[i].imdbUrl %>"> <img class="lazy" data-src="<%= testmovies[i].icon %>" src="" title=" <%= testmovies[i].shortName %>" /></a>
                    </div>
                    
                    <p>
                        <span class="movieName"><%= testmovies[i].shortName %></span><br>
                        <span class="movieDesc"> <%= testmovies[i].movieName.substr(testmovies[i].shortName.length+3, 110) %></span><br><br>
                        <span class="channel"><a href="http://plvpi:3000/channel=<%= testmovies[i].channel %>"><%= testmovies[i].channel %></a></span><br><br>
                        <span class="movieStart"><%= testmovies[i].movieStart.substr(0, 4) + '-' + testmovies[i].movieStart.substr(4, 2) + '-' + testmovies[i].movieStart.substr(6, 2) + ' ' + testmovies[i].movieStart.substr(8, 2) + ':' + testmovies[i].movieStart.substr(10, 2) %></span>
                    </p>
                </div>
            </div>    
        <% } %> 
    </div>
</div>
</body>
</html>
